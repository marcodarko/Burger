
<div class="tableBox">
  <table class="table">
    <thead>
      <th> BURGER ID</th>
      <th> BURGER NAME</th>
      <th> ACTION</th>
    </thead>
    <tbody>
      {{#each burgers}}
        {{#unless this.devoured}}
          <td>this.id</td>
          <td>this.burger_name</td>
           <td>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="sleepy" value="true">
                <button class="btn btn-warning" type="submit">Devour it!</button>
              </form>
          </td>
        {{/unless}}
      {{/each}}
    </tbody>
  </table>
</div>

<div class="tableBox">
  <table class="table">
      <thead>
      <th> DEVOURED BURGERS</th>
    </thead>
        <tbody>
          {{#each burgers}}
            {{#if this.devoured}}
              <td>this.burger_name</td>
            {{/if}}
          {{/each}}
        </tbody>
  </table>
</div>

